{
    "name": "Pause",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Show the current timestamp of the video",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_ui":{
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": true
    },

    "page_action": {
        "default_title": "Show current timestamp",
        "default_popup": "popup.html",
        "default_icon":  "icon.png"
    },
    "permissions": [
        "declarativeContent",
        "activeTab"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
    }]
}